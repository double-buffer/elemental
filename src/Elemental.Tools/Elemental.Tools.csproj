<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>
  
  <Target Name="GetShaderCompilers" BeforeTargets="CoreCompile">
    <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('Windows'))">
      <PowerShellCommand>powershell</PowerShellCommand>
    </PropertyGroup>
    <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('OSX'))">
      <PowerShellCommand>pwsh</PowerShellCommand>
    </PropertyGroup>
    <Exec Condition="!Exists('../../external/shader-compilers')" Command="$(PowerShellCommand) -ExecutionPolicy Unrestricted -NoProfile -File ../../external/GetShaderCompilers.ps1" />
  </Target>

  <!-- REFACTOR the copying of the tools -->
  <ItemGroup Condition="$([MSBuild]::IsOSPlatform('Windows'))">
    <Content Include="../../external/shader-compilers/dxc/bin/x64/dxcompiler.dll">
      <TargetPath>ShaderCompilers/dxcompiler.dll</TargetPath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="../../external/shader-compilers/dxc/bin/x64/dxil.dll">
      <TargetPath>ShaderCompilers/dxil.dll</TargetPath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="../../external/shader-compilers/dxc/bin/x64/dxc.exe">
      <TargetPath>ShaderCompilers/dxc.exe</TargetPath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  
  <ItemGroup Condition="$([MSBuild]::IsOSPlatform('OSX'))">
    <Content Include="../../external/shader-compilers/dxc/lib/x64/libdxcompiler.dylib">
      <TargetPath>ShaderCompilers/lib/libdxcompiler.dylib</TargetPath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="../../external/shader-compilers/dxc/bin/x64/dxc">
      <TargetPath>ShaderCompilers/bin/dxc</TargetPath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="../../external/shader-compilers/spirv-cross/bin/spirv-cross">
      <TargetPath>ShaderCompilers/bin/spirv-cross</TargetPath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="../../external/shader-compilers/spirv-cross/lib/libspirv-cross-c-shared.dylib">
      <TargetPath>ShaderCompilers/lib/libspirv-cross-c-shared.dylib</TargetPath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
